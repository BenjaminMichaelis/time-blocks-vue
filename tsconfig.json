{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "vue": ["node_modules/vue"],
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "types": ["node"],
    "outDir": "dist"
  },
  "include": [
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }],
}